filename = "testfile.txt"

if [ "$#" -lt 2 ]; then
  echo "invalid number of arguments"
  exit 1
fi


#initialize -v and -n
show_line_number = false
invert_match = false

#for 2 args
# Check if first argument starts with "-" to check if it's a command
if [[ "$1" == -* ]]; then
  case "$1" in
    *n*) show_line_numbers=true ;;
    *v*) invert_match=true ;;
    *) echo "Invalid option: $1"; exit 1 ;;
  esac
shift
fi
